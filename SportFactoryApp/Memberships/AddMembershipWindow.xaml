<Window x:Class="SportFactoryApp.Memberships.AddMembershipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Add Membership" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Add Membership" FontWeight="Bold" FontSize="16" />

        <!-- WatermarkComboBox for selecting member -->
        <xctk:WatermarkComboBox x:Name="MemberComboBox" 
                                 IsEditable="True" 
                                 Margin="0,10,0,10" 
                                 Watermark="Select Member"
                                 IsTextSearchEnabled="True" />

        <xctk:WatermarkTextBox x:Name="TypeTextBox" Watermark="Membership Type" Margin="0,10,0,10"/>
        <xctk:WatermarkTextBox x:Name="PriceTextBox" Watermark="Price" Margin="0,10,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add" Click="AddButton_Click" Margin="5"/>
            <Button Content="Cancel" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
