<Window x:Class="SportFactoryApp.Members.UpdateMemberWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             Title="Update Member" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Update Member" FontWeight="Bold" FontSize="16" />
        <xctk:WatermarkTextBox Name="FirstNameTextBox" Watermark="Enter First Name" />
        <xctk:WatermarkTextBox Name="LastNameTextBox" Watermark="Enter Last Name" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="SaveButton_Click" Margin="5"/>
            <Button Content="Cancel" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
