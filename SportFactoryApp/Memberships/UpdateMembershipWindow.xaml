<Window x:Class="SportFactoryApp.Memberships.UpdateMembershipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Update Membership" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Update Membership" FontWeight="Bold" FontSize="16" />

        <!-- ComboBox for selecting member -->
        <ComboBox x:Name="MemberComboBox" 
                  IsEditable="True" 
                  Margin="0,10,0,10" 
                  IsTextSearchEnabled="True" 
                  IsDropDownOpen="False" />

        <xctk:WatermarkTextBox x:Name="TypeTextBox" Watermark="Membership Type" Margin="0,10,0,10"/>
        <xctk:WatermarkTextBox x:Name="PriceTextBox" Watermark="Price" Margin="0,10,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Update" Click="UpdateButton_Click" Margin="5"/>
            <Button Content="Cancel" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
