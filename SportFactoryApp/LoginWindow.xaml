<Window x:Class="SportFactoryApp.LoginWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Icon="pack://application:,,,/Images/SFLogo.ico"
        Title="SPORT FACTORY ERP" 
        WindowStyle="None"
        ResizeMode="NoResize" WindowState="Maximized">

    <Window.Resources>
        <!-- Define the fade-out animation -->
        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                             From="1.0" To="0.0" Duration="0:0:1"/>
        </Storyboard>
    </Window.Resources>

    <Grid Name="LoginGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/SFCover.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Custom Title Bar -->
        <Grid Height="30" VerticalAlignment="Top" Background="Black" MouseDown="TitleBar_MouseDown" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="pack://application:,,,/Images/SFLogo.png" Height="25" Width="25" Margin="10"/>
                <TextBlock Text="SPORT FACTORY ERP" VerticalAlignment="Center" 
                   Foreground="White" FontSize="16" FontWeight="Bold" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30">
                <Button x:Name="MinimizeRestoreButton"
                    Content="_" 
                    Background="Black" 
                    Foreground="#C0C0C0" 
                    BorderBrush="Black" 
                    Width="40" 
                    Click="MinimizeButton_Click" />

                <Button x:Name="MaximizeRestoreButton" 
                Content="❐" 
                Background="Black" 
                Foreground="#C0C0C0" 
                BorderBrush="Black" 
                Width="40" 
                Click="MaximizeRestoreButton_Click"/>

                <Button x:Name="CloseButton"
                Content="X"
                Background="Black" 
                Foreground="#C0C0C0" 
                BorderBrush="Black" 
                Width="40"
                Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Logo at the top left -->
        

        <!-- White card with shadow -->
        <Border Background="White" CornerRadius="50" Padding="20" Width="400" Height="550" 
                VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" >
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="20" Opacity="1"/>
            </Border.Effect>

            <!-- StackPanel inside the white card -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  Height="500" Width="350">
                <TextBlock  FontSize="50" FontFamily="DN Sans" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" Foreground="Black"><Run Text="BONJOUR"/><LineBreak/><Run Text="YE BDAN!"></Run></TextBlock>
                <TextBlock Text="Username" FontSize="20" FontFamily="DN Sans" FontWeight="Bold" Margin="20,0,20,10"></TextBlock>
                <Border Background="White" CornerRadius="20" BorderBrush="#D3D3D3" BorderThickness="3" Margin="20,0,20,20">
                    <xctk:WatermarkTextBox Name="UsernameTextBox" FontSize="20" Watermark="Username" 
                                           Height="50" Padding="10" FontFamily="DN Sans" Background="Transparent" BorderThickness="0"/>
                </Border>
                <TextBlock Text="Mot de passe" FontSize="20" FontFamily="DN Sans" FontWeight="Bold" Margin="20,0,20,10"></TextBlock>
                <Border Background="Transparent" CornerRadius="20" BorderBrush="#D3D3D3" BorderThickness="2" Margin="20,0,20,0">
                    <xctk:WatermarkPasswordBox Name="PasswordBox" FontSize="20" Watermark="Password" 
                                               Height="50" Padding="10" VerticalAlignment="Center" FontFamily="DN Sans" Background="Transparent" BorderThickness="0"/>
                </Border>

                <Button Name="LoginButton" Content="Se Connecter" Click="LoginButton_Click" Height="50" 
                        Background="Black" Foreground="White" Margin="30" Padding="5" FontFamily="DN Sans" FontSize="30" FontWeight="Bold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="30">
                                            <!-- Rounded Button -->
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005F99"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Powered By Section -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Grid.ColumnSpan="2">
            <TextBlock Text="Powered By" FontFamily="Roboto" FontWeight="Bold" VerticalAlignment="Center" FontSize="20" Foreground="White" Margin="0,0,0,0"/>
            <Image Source="pack://application:,,,/Images/awm.png" Height="50" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
